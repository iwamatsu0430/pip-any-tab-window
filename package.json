    "@crxjs/vite-plugin": "^2.0.3",
    "@types/chrome": "^0.1.36",
    "typescript": "^5.7.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "packageManager": "npm@10.9.0"
}
