{
  "manifest_version": 3,
  "name": "PiP Any Tab/Window",
  "version": "0.1.0",
  "description": "Picture-in-Picture any browser tab or native window",
  "permissions": ["tabs", "activeTab", "scripting", "tabCapture"],
  "icons": {
    "16": "icons/icon16.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/background.ts"
  }
}
